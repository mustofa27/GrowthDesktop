<Page x:Class="Growth.Pages.Distributor.List"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Growth.Pages.Distributor"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="524" d:DesignWidth="1136"
      Title="List">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid Background="#EEEEEE" Height="40" Margin="0 0 0 0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0 0 0">
                    <fa:ImageAwesome Icon="User" Foreground="#3A3A3A" Height="14" Width="14"/>
                    <TextBlock FontFamily="Segoe UI" FontSize="14" Margin="20 0 0 0">Distributor List</TextBlock>
                </StackPanel>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">
                <StackPanel Orientation="Vertical">
                    <Button HorizontalAlignment="Left" Background="#2D89EF" Foreground="White" Padding="10 5 10 5" Click="Button_Click">Tambah Distributor</Button>
                    <DataGrid x:Name="listDistributor" Margin="0 15 0 0" TextElement.FontSize="15" Foreground="Black" AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" MaxWidth="0" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Kode Distributor" Width="156" Binding="{Binding Kd_dist}" />
                            <DataGridTextColumn Header="Nama" Width="156" Binding="{Binding Nm_dist}" />
                            <DataGridTextColumn Header="Alamat" Width="156" Binding="{Binding Almt_dist}" />
                            <DataGridTextColumn Header="Tipe" Width="156" Binding="{Binding Kd_tipe}" />
                            <DataGridTextColumn Header="Kota" Width="156" Binding="{Binding kota}" />
                            <DataGridTextColumn Header="Telepon" Width="156" Binding="{Binding Telp_dist}" />
                            <DataGridTemplateColumn Header="Action" Width="156">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <fa:ImageAwesome Icon="Edit" Height="12" Width="12" Margin="0 0 20 0" Foreground="Black"
                                                             MouseLeftButtonUp="Edit_MouseLeftButtonUp"
                                                 MouseEnter="ImageAwesome_MouseEnter" MouseLeave="ImageAwesome_MouseLeave"/>
                                            <fa:ImageAwesome Icon="Trash" Height="12" Width="12" Margin="0 0 0 0" Foreground="Black"
                                                             MouseLeftButtonUp="Delete_MouseLeftButtonUp"
                                                 MouseEnter="ImageAwesome_MouseEnter" MouseLeave="ImageAwesome_MouseLeave"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
