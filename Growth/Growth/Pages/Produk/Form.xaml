<Page x:Class="Growth.Pages.Produk.Form"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Growth.Pages.Produk"
      mc:Ignorable="d" 
      d:DesignHeight="524" d:DesignWidth="1136"
      Title="Form">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="status" FontFamily="Segoe UI" FontSize="25" Margin="0 0 0 30" Foreground="Green" Visibility="Collapsed">Create area sukses</TextBlock>
            <TextBlock FontFamily="Segoe UI" FontSize="15">Kode Produk</TextBlock>
            <TextBox x:Name="id" Height="30" Width="350" HorizontalAlignment="Left" Margin="0 5 0 10"></TextBox>
            <TextBlock FontFamily="Segoe UI" FontSize="15">Nama Produk</TextBlock>
            <TextBox x:Name="nama" Height="30" Width="350" HorizontalAlignment="Left" Margin="0 5 0 10"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Width="80" Background="Red" Foreground="White" FontSize="15" Margin="0 0 10 0" Click="Button_Click_1">Back</Button>
                <Button Background="Green" Foreground="White" Padding="10 5 10 5" FontSize="15" Click="Button_Click">Simpan</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
